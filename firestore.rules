
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ===============================
       Helper Functions
       =============================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function userDocExists(uid) {
      return exists(/databases/$(database)/documents/users/$(uid));
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isModerator() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_moderator/$(request.auth.uid));
    }

    function isModeratorOrAdmin() {
      return isModerator() || isAdmin();
    }

    /* ===============================
       Users
       =============================== */

    match /users/{userId} {
      allow read: if isSignedIn();

      allow create: if
        isOwner(userId) &&
        request.resource.data.uid == userId;

      allow update: if
        isOwner(userId) &&
        request.resource.data.uid == resource.data.uid &&
        request.resource.data.role == resource.data.role &&
        request.resource.data.createdAt == resource.data.createdAt;

      allow delete: if false;
    }

    /* ===============================
       Forums
       =============================== */

    match /forums/{forumId} {

      allow get, list: if
        resource.data.visibility == 'public'
        || (isSignedIn() && isOwner(resource.data.createdBy))
        || isModeratorOrAdmin();

      allow create: if
        isSignedIn() &&
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.visibility in ['public', 'private'] &&
        request.resource.data.status == 'active';

      allow update, delete: if isAdmin();
    }

    /* ===============================
       Threads
       =============================== */

    match /threads/{threadId} {

      allow get, list: if
        (
          resource.data.authorVisibility == 'public' &&
          userDocExists(resource.data.authorId)
        )
        || isOwner(resource.data.authorId)
        || isModeratorOrAdmin();

      allow create: if
        isSignedIn() &&
        request.resource.data.authorId == request.auth.uid &&
        request.resource.data.status == 'published';

      allow update: if
        (
          isOwner(resource.data.authorId) &&
          !resource.data.isLocked &&
          request.resource.data
            .diff(resource.data)
            .changedKeys()
            .hasOnly(['title', 'body', 'tags', 'updatedAt'])
        )
        ||
        (
          isModeratorOrAdmin() &&
          request.resource.data
            .diff(resource.data)
            .changedKeys()
            .hasOnly(['status', 'isPinned', 'isLocked', 'updatedAt', 'moderatorNotes'])
        )
        ||
        (
          isSignedIn() &&
          request.resource.data
            .diff(resource.data)
            .changedKeys()
            .hasOnly(['replyCount', 'latestReplyAt'])
        );

      allow delete: if false;

      /* ===============================
         Thread Chat (Realtime)
         =============================== */

      match /chatMessages/{messageId} {

        allow get, list: if
          isSignedIn() &&
          resource.data.status == 'active';

        allow create: if
          isSignedIn() &&
          request.resource.data.senderId == request.auth.uid &&
          get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false;

        allow update, delete: if
          isOwner(resource.data.senderId) ||
          isModeratorOrAdmin();
      }

      /* ===============================
         Replies (Single-Level Nested)
         =============================== */

      match /replies/{replyId} {

        allow get, list: if
          resource.data.status == 'published'
          || isOwner(resource.data.authorId)
          || isModeratorOrAdmin();

        allow create: if
          isSignedIn() &&
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.body is string &&
          request.resource.data.status == 'published' &&
          get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false &&
          (
            request.resource.data.parentReplyId == null ||
            (
              request.resource.data.parentReplyId != null &&
              exists(
                /databases/$(database)/documents/threads/$(threadId)/replies/$(request.resource.data.parentReplyId)
              ) &&
              get(
                /databases/$(database)/documents/threads/$(threadId)/replies/$(request.resource.data.parentReplyId)
              ).data.parentReplyId == null
            )
          );

        allow update: if
          (
            isOwner(resource.data.authorId) &&
            request.resource.data
              .diff(resource.data)
              .changedKeys()
              .hasOnly(['body', 'updatedAt'])
          )
          ||
          (
            isModeratorOrAdmin() &&
            request.resource.data
              .diff(resource.data)
              .changedKeys()
              .hasOnly(['status', 'moderatorNotes'])
          );

        allow delete: if false;
      }
    }

    /* ===============================
       Categories
       =============================== */

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /* ===============================
       Tags
       =============================== */

    match /tags/{tagId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    /* ===============================
       Reports
       =============================== */

    match /reports/{reportId} {

      allow create: if
        isSignedIn() &&
        request.resource.data.reporterId == request.auth.uid &&
        request.resource.data.status == 'open';

      allow get, list, update: if isModeratorOrAdmin();

      allow delete: if false;
    }

    /* ===============================
       Moderation Queue
       =============================== */

    match /moderationQueue/{queueItemId} {
      allow read, update: if isModeratorOrAdmin();
      allow create, delete: if false;
    }

    /* ===============================
       Role Collections
       =============================== */

    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    match /roles_moderator/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
