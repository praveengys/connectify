
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    function canWrite(userId) {
      let user = get(/databases/$(database)/documents/users/$(userId));
      return user != null
        && user.data.get('isBanned', false) == false 
        && user.data.get('isMuted', false) == false;
    }
    
    // User Profiles
    match /users/{userId} {
      allow read: if request.auth != null && (resource.data.profileVisibility == 'public' || request.auth.uid == userId || isAdmin(request.auth.uid));
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Forums
    match /forums/{forumId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Categories
    match /categories/{categoryId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Posts
    match /posts/{postId} {
      // Allow any authenticated user to read public posts. This is required for list queries.
      allow read: if true;
      
      allow create: if request.auth != null && canWrite(request.auth.uid);
      
      allow update: if request.auth != null && (
        // The author or an admin can update anything except counts
        (request.auth.uid == resource.data.authorId || isAdmin(request.auth.uid))
        && !('likesCount' in request.resource.data)
        && !('commentsCount' in request.resource.data)
        && !('sharesCount' in request.resource.data)
      ) || (
        // Any authenticated user can increment/decrement counts, but nothing else.
        canWrite(request.auth.uid)
        && request.resource.data.size() == resource.data.size() + 1 // Ensure only one field is added
        && (
             ('likesCount' in request.resource.data && request.resource.data.likesCount == resource.data.likesCount + 1)
          || ('commentsCount' in request.resource.data && request.resource.data.commentsCount == resource.data.commentsCount + 1)
          || ('sharesCount' in request.resource.data && request.resource.data.sharesCount == resource.data.sharesCount + 1)
        )
      );

      allow delete: if request.auth != null && (request.auth.uid == resource.data.authorId || isAdmin(request.auth.uid));

      // Likes for a Post
      match /likes/{userId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == userId && canWrite(userId);
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Comments for a Post
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && canWrite(request.auth.uid) && exists(/databases/$(database)/documents/posts/$(postId));
        allow update, delete: if request.auth != null && (isAdmin(request.auth.uid) || request.auth.uid == resource.data.authorId);
      }
    }
    
    // Groups & Chat
    match /groups/{groupId} {
      allow create: if request.auth != null && canWrite(request.auth.uid);
      allow read: if request.auth != null && (resource.data.type == 'public' || request.auth.uid in resource.data.members);
      allow update: if request.auth != null && (isAdmin(request.auth.uid) || request.auth.uid == resource.data.createdBy);
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
      
      // Group Messages
      match /messages/{messageId} {
        allow read: if request.auth != null && (
            get(/databases/$(database)/documents/groups/$(groupId)).data.type == 'public'
            || request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members
        );
        allow create: if request.auth != null 
            && canWrite(request.auth.uid) 
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow update, delete: if false; // Messages are immutable
      }

       match /typing/{userId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Forum Threads & Replies
    match /threads/{threadId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && canWrite(request.auth.uid);
        
        allow update: if request.auth != null && (
            // Author or Admin can update metadata
            (request.auth.uid == resource.data.authorId || isAdmin(request.auth.uid))
             && !('replyCount' in request.resource.data)
        ) || (
            // Any user can increment reply count
            canWrite(request.auth.uid)
            && request.resource.data.size() == resource.data.size() + 1
            && 'replyCount' in request.resource.data 
            && request.resource.data.replyCount == resource.data.replyCount + 1
        );

        allow delete: if request.auth != null && (isAdmin(request.auth.uid) || request.auth.uid == resource.data.authorId);
        
        // Replies
        match /replies/{replyId} {
            allow read: if request.auth != null;
            allow create: if request.auth != null && canWrite(request.auth.uid) && exists(/databases/$(database)/documents/threads/$(threadId));
            allow update, delete: if request.auth != null && (isAdmin(request.auth.uid) || request.auth.uid == resource.data.authorId);
        }

        // Live Chat Messages within a Thread
        match /chatMessages/{messageId} {
            allow read: if request.auth != null;
            allow create: if request.auth != null && canWrite(request.auth.uid) && get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false;
            allow update, delete: if false; // Messages are immutable
        }
    }
  }
}
