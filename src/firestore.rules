
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------- Helper Functions ---------- */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isModerator() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_moderator/$(request.auth.uid));
    }

    function isModeratorOrAdmin() {
      return isModerator() || isAdmin();
    }

    function isAuthorProfilePublic(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.profileVisibility == 'public';
    }
    
    // Rules for user profile documents
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      
      allow list: if isSignedIn();

      allow read: if resource.data.profileVisibility == 'public'
               || isOwner(userId)
               || isAdmin();

      allow create: if isOwner(userId) && request.resource.data.uid == userId;

      allow update: if isOwner(userId);
      
      allow delete: if false;
    }
    
    /* ---------- Forum Rules ---------- */
    match /forums/{forumId} {
      allow get: if (resource.data.visibility == 'public' && isAuthorProfilePublic(resource.data.createdBy)) 
                  || isOwner(resource.data.createdBy) 
                  || isModeratorOrAdmin();

      allow list: if isSignedIn();

      allow create: if isSignedIn()
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.status == 'active';

      allow update: if isAdmin();

      allow delete: if isAdmin();
    }

    match /threads/{threadId} {

      /* READ */
      allow get: if (isAuthorProfilePublic(resource.data.authorId))
                      || isOwner(resource.data.authorId)
                      || isModeratorOrAdmin();

      allow list: if isSignedIn();

      /* CREATE */
      allow create: if
        isSignedIn() &&
        request.resource.data.authorId == request.auth.uid &&
        request.resource.data.status == 'published' &&
        request.resource.data.isLocked == false &&
        request.resource.data.isPinned == false;

      /* UPDATE */
      allow update: if
        (
          // Owner updates (content edits only)
          isOwner(resource.data.authorId) &&
          !resource.data.isLocked &&
          request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['title', 'body', 'tags', 'updatedAt'])
        )
        ||
        (
          // Moderator / Admin updates
          isModeratorOrAdmin() &&
          request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['status', 'isPinned', 'isLocked', 'updatedAt', 'moderatorNotes'])
        )
        ||
        (
          // Allow any signed-in user to update reply count
          isSignedIn() &&
          request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['replyCount', 'latestReplyAt'])
        );

      /* DELETE (SOFT ONLY) */
      allow delete: if false;

      // Rules for the real-time chat subcollection
      match /chatMessages/{messageId} {
        allow read: if isSignedIn() && resource.data.status == 'active';
        
        allow create: if isSignedIn()
                      && request.resource.data.senderId == request.auth.uid
                      && get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false;
        
        allow update, delete: if isOwner(resource.data.senderId) || isModeratorOrAdmin();
      }
      
      // Rules for replies subcollection
      match /replies/{replyId} {
        allow read: if resource.data.status == 'published' || isOwner(resource.data.authorId) || isModeratorOrAdmin();
        
        allow create: if 
          isSignedIn() && 
          request.resource.data.authorId == request.auth.uid && 
          request.resource.data.body is string && 
          request.resource.data.status == 'published' && 
          get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false &&
          (
            (request.resource.data.parentReplyId == null && request.resource.data.depth == 0) ||
            (
              request.resource.data.parentReplyId != null &&
              request.resource.data.depth == 1 &&
              get(/databases/$(database)/documents/threads/$(threadId)/replies/$(request.resource.data.parentReplyId)).data.depth == 0
            )
          );

        allow update: if 
          (isOwner(resource.data.authorId) && request.resource.data.diff(resource.data).changedKeys().hasOnly(['body', 'updatedAt'])) || 
          (isModeratorOrAdmin() && request.resource.data.diff(resource.data).changedKeys().hasOnly(['status', 'moderatorNotes']));
        
        allow delete: if false; // Soft deletes are handled by updating the status.
      }
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /tags/{tagId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    match /reports/{reportId} {

      /* CREATE */
      allow create: if
        isSignedIn() &&
        request.resource.data.reporterId == request.auth.uid &&
        request.resource.data.status == 'open';

      /* READ */
      allow get, list: if isModeratorOrAdmin();

      /* UPDATE */
      allow update: if isModeratorOrAdmin();

      /* DELETE */
      allow delete: if false;
    }
    
     match /moderationQueue/{queueItemId} {

      allow read: if isModeratorOrAdmin();

      allow update: if isModeratorOrAdmin();

      allow create: if false; // created only via backend logic

      allow delete: if false;
    }

    /* ---------- Roles Rules ---------- */

    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }
    
    match /roles_moderator/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
