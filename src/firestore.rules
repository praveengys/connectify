
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isModerator() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_moderator/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isModeratorOrAdmin() {
      return isModerator() || isAdmin();
    }

    /* Users */
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isOwner(userId) && request.resource.data.uid == resource.data.uid;
      allow delete: if false;
    }

    /* Groups + messages (realtime chat) */
    match /groups/{groupId} {
      allow get, list: if isSignedIn();

      allow create: if isSignedIn()
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.members[request.auth.uid] == 'owner'
                    && request.resource.data.members.size() == 1
                    && request.resource.data.memberCount == 1;
      
      allow update: if isSignedIn()
                    && (resource.data.members[request.auth.uid] in ['owner', 'admin']
                        || isModeratorOrAdmin());

      match /messages/{messageId} {
        allow read, list: if isSignedIn()
                          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

        allow create: if isSignedIn()
                      && request.resource.data.senderId == request.auth.uid
                      && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
       match /typing/{userId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow write: if isOwner(userId) && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
    }

    /* Forums */
    match /forums/{forumId} {
      allow get, list: if isSignedIn();

      allow create: if isSignedIn()
                    && request.resource.data.createdBy == request.auth.uid;

      allow update, delete: if isModeratorOrAdmin();
    }

    /* Threads + replies */
    match /threads/{threadId} {
      allow get, list: if isSignedIn();

      allow create: if isSignedIn()
                    && request.resource.data.authorId == request.auth.uid;

      allow update: if (isOwner(resource.data.authorId) && !resource.data.isLocked)
                    || isModeratorOrAdmin();

      match /replies/{replyId} {
        allow read, list: if isSignedIn();

        allow create: if isSignedIn()
                      && request.resource.data.authorId == request.auth.uid
                      && !get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked;
      }
    }

    /* Categories / tags / reports â€“ optional extra control */
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    match /tags/{tagId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn()
                    && request.resource.data.reporterId == request.auth.uid;
      allow get, list, update: if isModeratorOrAdmin();
      allow delete: if false;
    }
  }
}
