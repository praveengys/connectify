
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USER DATA
    match /users/{userId} {
      // Users can read any public profile, and their own private one.
      allow read: if request.auth != null;
      // Users can only write to their own profile.
      allow write: if isOwner(userId);
      
      // NOTIFICATIONS SUBCOLLECTION
      match /notifications/{notificationId} {
        // Users can only read and update their own notifications.
        allow read, update: if isOwner(userId);
        // Notifications are created by backend triggers only.
        allow create, delete: if false;
      }
    }
    
    // DEMO BOOKINGS & SLOTS
    match /demoSlots/{slotId} {
      // Anyone can read available slots.
      allow get, list: if true;
      // Only admins can create, update or delete slots.
      allow write: if isAdmin();
    }
    
    match /demoBookings/{bookingId} {
        // Anyone can create a booking request.
        allow create: if true;
        // Only admins can read all bookings. Users can read their own.
        allow read: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.uid);
        // Only admins can update the status of a booking.
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }

    // FORUM & DISCUSSIONS
    match /forums/{forumId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow create, write: if isAdmin();
    }

    match /threads/{threadId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && isOwner(request.resource.data.authorId);
      allow update: if isAdmin() || isOwner(resource.data.authorId);
      allow delete: if isAdmin();
      
      match /replies/{replyId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && isOwner(request.resource.data.authorId);
        allow update, delete: if isAdmin() || isOwner(resource.data.authorId);
      }
      
      match /chatMessages/{messageId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null && isOwner(request.resource.data.senderId);
          allow update, delete: if false;
      }
    }
    
    // GROUP CHATS
    match /groups/{groupId} {
        function isGroupMember() {
            return request.auth != null && resource.data.members[request.auth.uid] != null;
        }
        function isGroupOwner() {
            return request.auth != null && resource.data.members[request.auth.uid] == 'owner';
        }
        function isGroupAdmin() {
            return request.auth != null && (resource.data.members[request.auth.uid] == 'owner' || resource.data.members[request.auth.uid] == 'admin');
        }

        allow get: if resource.data.type == 'public' || isGroupMember();
        allow list: if resource.data.type == 'public';
        
        allow create: if request.auth != null;
        
        // Only group admins/owners can update group details
        // Specific field validation for joining is handled in transactions in code
        allow update: if isGroupAdmin() || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'memberCount', 'lastMessage']);

        allow delete: if isGroupOwner() || isAdmin();

        match /messages/{messageId} {
            allow read, create: if isGroupMember();
            allow update, delete: if isOwner(resource.data.senderId) || isGroupAdmin();
        }
        
        match /typing/{userId} {
            allow read: if isGroupMember();
            allow write: if isOwner(userId);
        }
    }

    // SOCIAL FEED (POSTS, LIKES, COMMENTS)
    match /posts/{postId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && isOwner(request.resource.data.authorId);
        allow update, delete: if isAdmin() || isOwner(resource.data.authorId);
        
        match /likes/{userId} {
            allow read: if request.auth != null;
            allow write: if isOwner(userId);
        }
        
        match /comments/{commentId} {
            allow read: if request.auth != null;
            allow create: if request.auth != null && isOwner(request.resource.data.authorId);
            allow update, delete: if isAdmin() || isOwner(resource.data.authorId);
        }
    }
  }
}
