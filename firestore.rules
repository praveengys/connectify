rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Rules for user profile documents
    match /users/{userId} {
      // READ: Allow reads if the user is the owner, or if the profile is public.
      allow get: if isOwner(userId) || (isSignedIn() && resource.data.profileVisibility == 'public');
      
      // LIST: Allow any signed-in user to list public profiles.
      // IMPORTANT: The client query MUST include `where('profileVisibility', '==', 'public')`.
      allow list: if isSignedIn();

      // CREATE: Allow a user to create their own profile.
      // The new document's ID must match the creator's UID.
      allow create: if isOwner(userId) && request.resource.data.uid == userId;

      // UPDATE: Allow an owner to update their own profile.
      allow update: if isOwner(userId);
      
      // DELETE: Allow an owner to delete their own profile.
      allow delete: if isOwner(userId);
    }
    
    // Rules for the admin roles collection.
    // The existence of a document here grants admin privileges.
    match /roles_admin/{userId} {
      // READ: Only admins can see who other admins are.
      allow get, list: if isAdmin();
      
      // WRITE: Deny all client-side writes to prevent self-promotion to admin.
      // Admin roles must be assigned via a secure backend (e.g., Firebase Console or Cloud Function).
      allow write: if false;
    }
  }
}
