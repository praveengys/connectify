rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is not banned or muted.
    function canWrite(userId) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc.exists()
        && userDoc.data.get('isBanned', false) == false
        && userDoc.data.get('isMuted', false) == false;
    }

    // Helper function to check if a user is an admin.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if request.auth != null; // Allow logged-in users to read profiles
      allow create: if request.auth != null && request.auth.uid == userId; // A user can create their own document
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin()); // User can update their own profile, or admin can update any
      allow delete: if isAdmin(); // Only admins can delete users
    }

    // Rules for the 'posts' collection
    match /posts/{postId} {
      allow read: if true; // Posts are public

      // Create rule for new posts.
      allow create: if request.auth != null 
                    && canWrite(request.auth.uid)
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.likesCount == 0
                    && request.resource.data.commentsCount == 0
                    && request.resource.data.sharesCount == 0;

      // Update rule allows for specific field increments by any user, and full updates by author/admin.
      allow update: if request.auth != null && (
          // Author or admin can edit main content
          (resource.data.authorId == request.auth.uid || isAdmin())
          // Any authenticated user can increment/decrement counters
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likesCount', 'commentsCount', 'sharesCount']))
      );

      // Delete rule for author or admin.
      allow delete: if request.auth != null && (resource.data.authorId == request.auth.uid || isAdmin());

      // Subcollection for likes
      match /likes/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId; // User can only like/unlike for themselves
      }
      
      // Subcollection for comments
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null 
                      && canWrite(request.auth.uid)
                      && request.resource.data.authorId == request.auth.uid
                      && exists(/databases/$(database)/documents/posts/$(postId)); // Ensure post exists
        allow delete: if request.auth != null && (request.resource.data.authorId == request.auth.uid || isAdmin());
      }
    }

    // Rules for 'groups' collection
    match /groups/{groupId} {
        // Public groups are readable by any authenticated user. Private groups only by members.
        allow read: if request.auth != null && (resource.data.type == 'public' || request.auth.uid in resource.data.members);

        // Allow authenticated users to create groups
        allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;

        // Group owner or admins can update. All members can join/leave (by updating 'members' map)
        allow update: if request.auth != null && (
            resource.data.members[request.auth.uid] in ['owner', 'admin'] ||
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'memberCount'])
        );
        
        // Only the owner can delete a group
        allow delete: if request.auth != null && resource.data.members[request.auth.uid] == 'owner';

        // Rules for messages within a group
        match /messages/{messageId} {
            // Read is governed by the parent group's rules.
            allow read: if request.auth != null && (get(/databases/$(database)/documents/groups/$(groupId)).data.type == 'public' || request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
            
            // Allow members to create messages, if they are not muted.
            allow create: if request.auth != null 
                          && canWrite(request.auth.uid) 
                          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

            allow update, delete: if false; 
        }

        // Rules for typing indicators
        match /typing/{userId} {
            allow write: if request.auth != null && request.auth.uid == userId;
            allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }
    }
    
    // Rules for 'forums' collection
    match /forums/{forumId} {
      allow read: if true;
      allow create: if request.auth != null && canWrite(request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // Rules for 'categories' collection
    match /categories/{categoryId} {
      allow read: if true;
      allow create: if request.auth != null && canWrite(request.auth.uid);
      allow update, delete: if isAdmin();
    }
    
     // Rules for the 'threads' collection (Discussions)
    match /threads/{threadId} {
      allow read: if true;
      allow create: if request.auth != null && canWrite(request.auth.uid) && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.authorId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();

      // Rules for replies within a thread
      match /replies/{replyId} {
        allow read: if true;
        allow create: if request.auth != null && canWrite(request.auth.uid) && request.resource.data.authorId == request.auth.uid && get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false;
        allow update: if request.auth != null && (resource.data.authorId == request.auth.uid || isAdmin());
        allow delete: if isAdmin();
      }
    }
  }
}
