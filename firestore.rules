
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is not banned or muted.
    function canWrite(userId) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      // Use the get() function with a default value of false if the fields do not exist.
      let isBanned = get(userDoc.data, 'isBanned', false);
      let isMuted = get(userDoc.data, 'isMuted', false);
      return userDoc.exists() == true && isBanned == false && isMuted == false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if request.auth != null; // Allow logged-in users to read profiles
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'posts' collection
    match /posts/{postId} {
      // Allow reads for any document. List queries will also work.
      allow read: if true;

      // Allow create for original posts and reposts with validation
      allow create: if request.auth != null && canWrite(request.auth.uid) && request.resource.data.authorId == request.auth.uid
        && (
            // Normal Post Validation
            (request.resource.data.isRepost == false
                && request.resource.data.content is string
                && request.resource.data.likesCount == 0
                && request.resource.data.commentsCount == 0
                && request.resource.data.repostsCount == 0
                && request.resource.data.sharesCount == 0
            )
            // Repost Validation
            || (request.resource.data.isRepost == true
                && request.resource.data.originalPostId is string
                && get(/databases/$(database)/documents/posts/$(request.resource.data.originalPostId)).data.authorId != request.auth.uid // Can't repost own post
                && request.resource.data.originalAuthor is map
                && request.resource.data.originalPostCreatedAt is timestamp
            )
        );

      // Allow users to update their own posts, or admins to update any.
      // Also allow any authenticated user to increment repostsCount.
      allow update: if request.auth != null && (
          (request.auth.uid == resource.data.authorId)
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
          || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['repostsCount']) && request.resource.data.repostsCount == resource.data.repostsCount + 1)
      );

      // Allow users to delete their own posts, or admins to delete any
      allow delete: if request.auth != null && (
          (request.auth.uid == resource.data.authorId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      // Subcollection for likes
      match /likes/{userId} {
        allow read: if true;
        // A user can only like/unlike for themselves
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Subcollection for comments
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null && canWrite(request.auth.uid) && request.resource.data.authorId == request.auth.uid;
        allow delete: if request.auth != null && (
            request.auth.uid == resource.data.authorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
      }
    }

    // Rules for 'groups' collection
    match /groups/{groupId} {
        // Public groups are readable by any authenticated user.
        // Private groups are readable only by members.
        allow read: if request.auth != null && (resource.data.type == 'public' || request.auth.uid in resource.data.members);

        // Allow authenticated users to create groups
        allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;

        // Only the owner or an admin of the group can update its info
        allow update: if request.auth != null && resource.data.members[request.auth.uid] in ['owner', 'admin'];

        // Only the owner can delete a group
        allow delete: if request.auth != null && resource.data.members[request.auth.uid] == 'owner';

        // Rules for messages within a group
        match /messages/{messageId} {
            // Read is governed by the parent group's rules.
            allow read: if request.auth != null && (get(/databases/$(database)/documents/groups/$(groupId)).data.type == 'public' || request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
            
            // Allow members to create messages, if they are not muted.
            allow create: if request.auth != null && canWrite(request.auth.uid) && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

            // Generally, users shouldn't edit or delete messages. This can be changed.
            allow update, delete: if false; 
        }

        // Rules for typing indicators
        match /typing/{userId} {
            // Users can only set their own typing status
            allow write: if request.auth != null && request.auth.uid == userId;
            allow read: if request.auth != null;
        }
    }
    
    // Rules for 'forums' collection
    match /forums/{forumId} {
      allow read: if true; // Publicly readable
      allow create: if request.auth != null; // Logged-in users can create forums
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for 'categories' collection
    match /categories/{categoryId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
     // Rules for the 'threads' collection
    match /threads/{threadId} {
      allow read: if true; // All threads are public
      allow create: if request.auth != null && canWrite(request.auth.uid) && request.resource.data.authorId == request.auth.uid;
      allow update: if request.auth != null && (request.auth.uid == resource.data.authorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Rules for replies within a thread
      match /replies/{replyId} {
        allow read: if true;
        allow create: if request.auth != null && canWrite(request.auth.uid) && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if request.auth != null && (request.auth.uid == resource.data.authorId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      }

      // Rules for chat messages within a thread
      match /chatMessages/{messageId} {
        allow read: if true;
        allow create: if request.auth != null && canWrite(request.auth.uid) && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if false; // Typically don't allow edits/deletes
      }
    }
  }
}
