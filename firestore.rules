rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------- Helper Functions ---------- */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isModerator() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_moderator/$(request.auth.uid));
    }

    function isModeratorOrAdmin() {
      return isModerator() || isAdmin();
    }

    function isNotDeleted(resource) {
      return resource.data.status != 'deleted';
    }
    
    // Rules for user profile documents
    match /users/{userId} {
      // READ: Allow a user to read their own profile. This is crucial for login.
      allow get: if isOwner(userId);
      
      // LIST: Allow any user (signed in or not) to list public profiles.
      allow list: if request.query.get('profileVisibility') == 'public';

      // CREATE: Allow a user to create their own profile document.
      allow create: if isOwner(userId) && request.resource.data.uid == userId;

      // UPDATE: Allow an owner to update their own profile, protecting critical fields.
      allow update: if isOwner(userId)
                  && request.resource.data.uid == resource.data.uid
                  && request.resource.data.role == resource.data.role
                  && request.resource.data.createdAt == resource.data.createdAt;
      
      // DELETE: Deny all client-side deletes.
      allow delete: if false;
    }
    
    /* ---------- Forum Rules ---------- */
    match /forums/{forumId} {
      // READ: Public can see active forums. Owners/admins can see their own suspended forums.
      allow get: if (resource.data.status == 'active' && resource.data.visibility == 'public') 
                  || isOwner(resource.data.createdBy) 
                  || isAdmin();
      allow list: if isSignedIn(); // Client must filter correctly.

      // CREATE: Any signed-in user can create an active forum.
      allow create: if isSignedIn()
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.status == 'active';

      // UPDATE: Only admins can suspend or update forums.
      allow update: if isAdmin();

      // DELETE: Only admins can delete.
      allow delete: if isAdmin();
    }

    match /threads/{threadId} {

      /* READ */
      allow get, list: if isSignedIn();

      /* CREATE */
      allow create: if
        isSignedIn() &&
        request.resource.data.authorId == request.auth.uid &&
        request.resource.data.status == 'published' &&
        request.resource.data.isLocked == false &&
        request.resource.data.isPinned == false;

      /* UPDATE */
      allow update: if
        (
          // Owner updates (content edits only)
          isOwner(resource.data.authorId) &&
          !resource.data.isLocked &&
          request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['title', 'body', 'tags', 'updatedAt'])
        )
        ||
        (
          // Moderator / Admin updates
          isModeratorOrAdmin() &&
          request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['status', 'isPinned', 'isLocked', 'updatedAt', 'moderatorNotes'])
        );

      /* DELETE (SOFT ONLY) */
      allow delete: if false;

        match /replies/{replyId} {
          /* READ */
          // Any signed-in user can read replies in a thread.
          allow get, list: if isSignedIn();

          /* CREATE */
          allow create: if
            isSignedIn() &&
            request.resource.data.authorId == request.auth.uid &&
            request.resource.data.status == 'published' &&
            // Check that the parent thread is not locked before allowing a reply
            get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false;

          /* UPDATE */
          allow update: if
            (
              // Author can only update the body of their own reply
              isOwner(resource.data.authorId) &&
              request.resource.data.diff(resource.data).changedKeys()
                .hasOnly(['body', 'updatedAt'])
            )
            ||
            (
              // Moderators/admins can change the status (e.g., to hide a reply)
              isModeratorOrAdmin() &&
              request.resource.data.diff(resource.data).changedKeys()
                .hasOnly(['status', 'updatedAt', 'moderatorNotes'])
            );

          /* DELETE */
          allow delete: if false; // Soft-delete by changing status instead
        }
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /tags/{tagId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    match /reports/{reportId} {

      /* CREATE */
      allow create: if
        isSignedIn() &&
        request.resource.data.reporterId == request.auth.uid &&
        request.resource.data.status == 'open';

      /* READ */
      allow get, list: if isModeratorOrAdmin();

      /* UPDATE */
      allow update: if isModeratorOrAdmin();

      /* DELETE */
      allow delete: if false;
    }
    
     match /moderationQueue/{queueItemId} {

      allow read: if isModeratorOrAdmin();

      allow update: if isModeratorOrAdmin();

      allow create: if false; // created only via backend logic

      allow delete: if false;
    }

    /* ---------- Roles Rules ---------- */

    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }
    
    match /roles_moderator/{userId} {
      allow read: if isAdmin();
      write: if false;
    }
  }
}
