rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Global Helper Functions ---

    function signedIn() {
      return request.auth != null;
    }

    function uid() {
      return request.auth.uid;
    }

    function isSelf(userId) {
      return signedIn() && uid() == userId;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(uid()));
    }

    function hasUserDoc() {
      return signedIn() && exists(/databases/$(database)/documents/users/$(uid()));
    }

    function role() {
      return hasUserDoc() ? userDoc().data.role : null;
    }

    function isAdmin() {
      return role() == 'admin';
    }

    function isModerator() {
      return role() in ['admin', 'moderator'];
    }

    // --- User Profiles & Notifications ---

    match /users/{userId} {
      allow read: if signedIn();
      allow create: if isSelf(userId);
      allow update: if isSelf(userId) || isAdmin();
      allow delete: if isAdmin();

      match /notifications/{notificationId} {
        allow read, update, delete: if isSelf(userId);
        allow create: if false; // Can only be created by backend/Cloud Functions
      }
    }

    // --- Social Feed (Posts, Likes, Comments) ---

    match /posts/{postId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.authorId == uid();
      allow update: if isAdmin() || (signedIn() && request.auth.uid == resource.data.authorId);
      allow delete: if isAdmin() || (signedIn() && request.auth.uid == resource.data.authorId);

      match /likes/{likeId} {
        allow read: if signedIn();
        allow create, delete: if signedIn() && likeId == uid();
      }

      match /comments/{commentId} {
        allow read: if signedIn();
        allow create: if signedIn() && request.resource.data.authorId == uid();
        allow update, delete: if isAdmin() || (signedIn() && request.auth.uid == resource.data.authorId);
      }
    }

    // --- Groups & Group Messages ---

    match /groups/{groupId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.createdBy == uid();
      allow update, delete: if isAdmin(); // Group-wide updates are admin-only for now

      match /messages/{messageId} {
        allow read: if signedIn(); // Simplification: membership checked at app level
        allow create: if signedIn() && request.resource.data.senderId == uid();
        allow update, delete: if isAdmin() || (signedIn() && request.auth.uid == resource.data.senderId);
      }
    }

    // --- Forum (Threads, Replies, Chat) ---

    match /threads/{threadId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.authorId == uid();
      allow update: if isAdmin() || (signedIn() && request.auth.uid == resource.data.authorId);
      allow delete: if isAdmin() || (signedIn() && request.auth.uid == resource.data.authorId);

      match /replies/{replyId} {
        allow read: if signedIn();
        allow create: if signedIn() && request.resource.data.authorId == uid();
        allow update, delete: if isAdmin() || (signedIn() && request.auth.uid == resource.data.authorId);
      }

      match /chatMessages/{messageId} {
        allow read, create: if signedIn();
        allow update, delete: if isAdmin() || (signedIn() && request.auth.uid == resource.data.senderId);
      }
    }

    // --- Demo Booking ---

    match /demoSlots/{slotId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /demoBookings/{bookingId} {
      allow create: if signedIn() && request.resource.data.uid == uid();
      allow read: if isAdmin() || (signedIn() && request.auth.uid == resource.data.uid);
      allow update, delete: if isAdmin();
    }
    
    // --- Categories and Forums (Publicly Readable) ---
    
    match /forums/{forumId} {
      allow read: if signedIn();
      allow write: if isModerator();
    }
    
    match /categories/{categoryId} {
      allow read: if signedIn();
      allow write: if isModerator();
    }

    // --- Moderation ---

    match /moderationLogs/{logId} {
      allow read, write: if isModerator();
    }
  }
}
