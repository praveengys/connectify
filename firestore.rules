rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function safeIsAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || safeIsAdmin();
      
      match /notifications/{notificationId} {
        allow read, update: if isOwner(userId);
        allow create, delete: if false; // Must be created by Cloud Functions
      }
    }

    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
      allow update: if isSignedIn() && isOwner(resource.data.authorId);
      allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || safeIsAdmin());

      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
        allow update, delete: if isSignedIn() && (isOwner(resource.data.authorId) || safeIsAdmin());
      }

      match /likes/{userId} {
        allow read: if isSignedIn();
        allow create, delete: if isOwner(userId);
      }
    }

    match /threads/{threadId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
      allow update: if isSignedIn() && (isOwner(resource.data.authorId) || safeIsAdmin());
      allow delete: if safeIsAdmin();

      match /replies/{replyId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
        allow update, delete: if isSignedIn() && (isOwner(resource.data.authorId) || safeIsAdmin());
      }
      
      match /chatMessages/{messageId} {
        allow read: if isSignedIn(); // Simplified for now
        allow create: if isSignedIn() && isOwner(request.resource.data.senderId);
      }
    }

    match /groups/{groupId} {
      function isGroupMember() {
        return isSignedIn() && resource != null && resource.data.members[request.auth.uid] != null;
      }

      function isGroupAdmin() {
        return isGroupMember() && resource.data.members[request.auth.uid] in ['admin', 'owner'];
      }
      
      function isGroupOwner() {
        return isGroupMember() && resource.data.members[request.auth.uid] == 'owner';
      }

      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.members[request.auth.uid] == 'owner';
      allow update: if isGroupAdmin();
      allow delete: if isGroupOwner() || safeIsAdmin();

      match /messages/{messageId} {
        allow read: if isGroupMember();
        allow create: if isGroupMember() && isOwner(request.resource.data.senderId);
        allow update, delete: if isOwner(request.resource.data.senderId) || isGroupAdmin();
      }
      
      match /typing/{userId} {
        allow read, write: if isOwner(userId) && isGroupMember();
      }
    }

    match /demoSlots/{slotId} {
      allow read: if true;
      allow update: if isSignedIn();
      allow create, delete: if safeIsAdmin();
    }

    match /demoBookings/{bookingId} {
      allow create: if true; // Allow anonymous booking requests
      allow read: if safeIsAdmin() || (isSignedIn() && request.auth.uid == resource.data.uid);
      allow update, delete: if safeIsAdmin();
    }
    
    match /forums/{forumId} {
        allow read: if isSignedIn();
        allow create: if safeIsAdmin();
        allow update, delete: if safeIsAdmin();
    }

    match /categories/{categoryId} {
        allow read: if isSignedIn();
        allow create, update, delete: if safeIsAdmin();
    }
  }
}
