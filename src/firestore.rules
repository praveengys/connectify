
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isModerator() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'moderator';
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isModeratorOrAdmin() {
      return isModerator() || isAdmin();
    }
    
    function isNotMuted(uid) {
      // If isMuted is not present, assume not muted.
      return get(/databases/$(database)/documents/users/$(uid)).data.isMuted != true;
    }

    function isNotBanned(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.isBanned != true;
    }

    function canWrite(uid) {
      return isSignedIn() && isNotMuted(uid) && isNotBanned(uid);
    }

    /* Users */
    match /users/{userId} {
      // Any signed in user can read profiles (respects client-side visibility logic)
      allow read: if isSignedIn();

      // Users can create their own profile, but not set their own role.
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && (!('role' in request.resource.data) || request.resource.data.role == 'member')
                    && request.resource.data.isMuted == false
                    && request.resource.data.isBanned == false;
      
      // Users can update their own profile (limited fields). Admins can update any field.
      allow update: if (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'bio', 'avatarUrl', 'interests', 'skills', 'languages', 'location', 'currentlyExploring', 'company', 'profileVisibility', 'updatedAt']))
                    || isAdmin();

      allow delete: if false; // Disallow permanent user deletion for now to prevent orphaned content
    }

    /* Groups + messages */
    match /groups/{groupId} {
      allow get: if resource.data.type == 'public'
                    || (isSignedIn() && request.auth.uid in resource.data.members);
      allow list: if isSignedIn();

      // Users can create a group, becoming the owner. Must not be muted/banned.
      allow create: if canWrite(request.auth.uid)
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.members[request.auth.uid] == 'owner'
                    && request.resource.data.members.size() == 1
                    && request.resource.data.memberCount == 1;

      // Admins or group owners can update settings. Public group members can join.
      allow update: if (resource.data.members[request.auth.uid] in ['owner', 'admin']) || isAdmin() ||
                      (
                        canWrite(request.auth.uid) &&
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['members', 'memberCount']) &&
                        resource.data.type == 'public' &&
                        request.resource.data.members[request.auth.uid] == 'member' &&
                        !(request.auth.uid in resource.data.members)
                      );


      allow delete: if isOwner(resource.data.createdBy) || isAdmin();

      match /messages/{messageId} {
        // Members only can read messages.
        allow read, list: if isSignedIn()
                          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

        // Members can send messages if they are not muted/banned.
        allow create: if canWrite(request.auth.uid)
                      && request.resource.data.senderId == request.auth.uid
                      && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members
                      && (
                        !('muted' in get(/databases/$(database)/documents/groups/$(groupId)).data) ||
                        !(request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.muted)
                      );
      }

      match /typing/{userId} {
        // Only the user themselves can update their typing status.
        allow write: if isOwner(userId);
        // Only members can see who is typing.
        allow read: if isSignedIn()
                    && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
    }

    /* Forums */
    match /forums/{forumId} {
      allow get, list: if isSignedIn();

      allow create: if canWrite(request.auth.uid)
                    && request.resource.data.createdBy == request.auth.uid;

      allow update, delete: if isOwner(resource.data.createdBy) || isModeratorOrAdmin();
    }

    /* Threads + replies */
    match /threads/{threadId} {
      allow get, list: if isSignedIn();

      allow create: if canWrite(request.auth.uid)
                    && request.resource.data.authorId == request.auth.uid;

      allow update, delete: if isOwner(resource.data.authorId) || isModeratorOrAdmin();

      match /replies/{replyId} {
        allow read, list: if isSignedIn();

        allow create: if canWrite(request.auth.uid)
                      && request.resource.data.authorId == request.auth.uid;
      }
       match /chatMessages/{messageId} {
        allow read, list: if isSignedIn();

        allow create: if canWrite(request.auth.uid)
                      && request.resource.data.senderId == request.auth.uid;
      }
    }

    /* Categories / tags / reports â€“ optional */
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    match /tags/{tagId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn()
                    && request.resource.data.reporterId == request.auth.uid;
      allow get, list, update: if isModeratorOrAdmin();
      allow delete: if false;
    }
  }
}
