
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isPublicProfile(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.profileVisibility == 'public';
    }

    function canWrite() {
      // Users cannot be banned or muted
      return request.auth != null && !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isBanned && !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isMuted;
    }
    
    // User Profiles
    match /users/{userId} {
      // Anyone authenticated can list public profiles
      allow list: if request.auth != null;
      
      // Read own profile, public profiles, or if admin
      allow get: if request.auth != null && (isOwner(userId) || isPublicProfile(userId) || isAdmin());
      
      // Update own profile or if admin
      allow update: if request.auth != null && (isOwner(userId) || isAdmin());
      
      // Only admins can create or delete users from the server-side
      allow create, delete: if isAdmin();
    }

    // Groups & Group Messages
    match /groups/{groupId} {
      allow read, list: if request.auth != null;
      allow create: if canWrite();
      allow update: if canWrite() && (request.auth.uid in resource.data.members || isAdmin());
      allow delete: if isAdmin();

      // Messages within a group
      match /messages/{messageId} {
        // Members of the group can read messages
        allow get, list: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        
        // Members can create messages
        allow create: if canWrite() && request.auth.uid in resource.data.members && request.resource.data.senderId == request.auth.uid;
        
        allow update, delete: if isAdmin();
      }

      // Typing indicators
      match /typing/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Forums, Threads, & Replies
    match /forums/{forumId} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

    match /categories/{categoryId} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

    match /threads/{threadId} {
      allow read, list: if request.auth != null;
      allow create: if canWrite();
      allow update: if canWrite() && (request.resource.data.authorId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
      
      // Replies within a thread
      match /replies/{replyId} {
        allow read, list: if request.auth != null;
        allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isAdmin() || (canWrite() && request.resource.data.authorId == request.auth.uid);
      }
    }

    // Social Feed: Posts, Comments, Likes
    match /posts/{postId} {
        allow read, list: if request.auth != null;
        allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
        allow update: if canWrite() && (request.resource.data.authorId == request.auth.uid || isAdmin());
        allow delete: if isAdmin();

        match /likes/{userId} {
            allow read, list: if request.auth != null;
            allow create, delete: if canWrite() && request.auth.uid == userId;
        }

        match /comments/{commentId} {
            allow read, list: if request.auth != null;
            allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
            allow update, delete: if isAdmin() || (canWrite() && request.resource.data.authorId == request.auth.uid);
        }
    }

    // Demo Scheduling
    match /demoSlots/{slotId} {
      // Anyone can view available demo slots
      allow get, list: if true;

      // Only admins can create/update/delete slots
      allow create, update, delete: if isAdmin();
    }

    match /demoBookings/{bookingId} {
      // Anyone can create a booking request
      allow create: if true;

      // Admins can read all bookings, users can read their own
      allow get, list: if request.auth != null && (isAdmin() || request.auth.uid == resource.data.userId);
      
      // Only admins can update (approve/deny)
      allow update: if isAdmin();
      
      allow delete: if false; // Disallow client-side deletes
    }
  }
}
