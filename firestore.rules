
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function safeIsAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isGroupMember(groupId) {
      return isSignedIn()
        && resource != null
        && get(/databases/$(database)/documents/groups/$(groupId)).data.members[request.auth.uid] != null;
    }

    function isGroupOwner(groupId) {
        return isSignedIn()
            && resource != null
            && get(/databases/$(database)/documents/groups/$(groupId)).data.members[request.auth.uid] == 'owner';
    }

    function isGroupAdmin(groupId) {
        return isSignedIn()
            && resource != null
            && get(/databases/$(database)/documents/groups/$(groupId)).data.members[request.auth.uid] == 'admin';
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.authorId);
      allow update: if isOwner(resource.data.authorId) || safeIsAdmin();
      allow delete: if isOwner(resource.data.authorId) || safeIsAdmin();

      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.authorId);
        allow update, delete: if isOwner(resource.data.authorId) || safeIsAdmin();
      }
      
      match /likes/{userId} {
        allow read: if isSignedIn();
        allow create, delete: if isOwner(userId);
      }
    }

    match /threads/{threadId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.authorId);
      allow update: if isOwner(resource.data.authorId) || safeIsAdmin();
      allow delete: if safeIsAdmin();

      match /replies/{replyId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.authorId);
        allow update, delete: if isOwner(resource.data.authorId) || safeIsAdmin();
      }

      match /chatMessages/{messageId} {
          allow read, create: if isSignedIn();
      }
    }

    match /groups/{groupId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.createdBy);
      allow update: if isGroupOwner(groupId) || isGroupAdmin(groupId) || safeIsAdmin();
      allow delete: if isGroupOwner(groupId) || safeIsAdmin();
      
      match /messages/{messageId} {
        allow read: if isGroupMember(groupId);
        allow create: if isGroupMember(groupId) && isOwner(request.resource.data.senderId);
        allow update, delete: if isOwner(resource.data.senderId) || isGroupAdmin(groupId);
      }

      match /typing/{userId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    match /forums/{forumId} {
        allow read: if isSignedIn();
        allow create: if safeIsAdmin();
        allow update, delete: if safeIsAdmin();
    }
    
    match /categories/{categoryId} {
        allow read: if isSignedIn();
        allow create, update, delete: if safeIsAdmin();
    }

    match /demoSlots/{slotId} {
        allow read: if isSignedIn();
        allow create, update, delete: if safeIsAdmin();
    }

    match /demoBookings/{bookingId} {
      allow create: if isSignedIn()
                      && isOwner(request.resource.data.uid)
                      && request.resource.data.status == "pending";

      allow read: if safeIsAdmin()
                    || (isSignedIn() && isOwner(resource.data.uid));

      allow update, delete: if safeIsAdmin();
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, update: if isOwner(userId);
      allow create, delete: if false; // Must be created by Cloud Functions
    }
  }
}
