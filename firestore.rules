
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function canWrite() {
      return isSignedIn() &&
             (
                !('isMuted' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data) ||
                get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isMuted == false
             ) &&
             (
                !('isBanned' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data) ||
                get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isBanned == false
             );
    }
    
    // User Profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    // Groups & Messages
    match /groups/{groupId} {
      allow read: if isSignedIn();
      allow create: if canWrite();
      allow update: if isAdmin() || isOwner(get(/databases/$(database)/documents/groups/$(groupId)).data.createdBy);
      allow delete: if isAdmin() || isOwner(get(/databases/$(database)/documents/groups/$(groupId)).data.createdBy);

      // Group Messages
      match /messages/{messageId} {
         allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
    }

    // Forum Categories & Threads
    match /categories/{categoryId} {
        allow read, write: if isSignedIn();
    }
    
    match /forums/{forumId} {
        allow read, write: if isSignedIn();
    }

    match /threads/{threadId} {
      allow read: if isSignedIn();
      allow create, update: if canWrite();
      allow delete: if isAdmin() || isOwner(get(/databases/$(database)/documents/threads/$(threadId)).data.authorId);

      // Thread Replies
      match /replies/{replyId} {
        allow read: if isSignedIn();
        allow create: if canWrite() && !get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked;
        allow update: if isAdmin() || isOwner(resource.data.authorId);
        allow delete: if isAdmin() || isOwner(resource.data.authorId);
      }
    }
    
    // Activity Feed Posts, Comments, Likes
    match /posts/{postId} {
      allow read: if isSignedIn();
      
      allow create: if canWrite()
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.visibility in ['public', 'group-only']
                    && request.resource.data.media is list;

      allow update: if (isAdmin() || isOwner(resource.data.authorId))
                    // Allow any authenticated user to increment/decrement likes
                    || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likesCount']));
      
      allow delete: if isAdmin() || isOwner(resource.data.authorId);

      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if canWrite();
        allow update, delete: if isAdmin() || isOwner(resource.data.authorId);
      }

      match /likes/{userId} {
        allow read: if isSignedIn();
        allow create, delete: if isOwner(userId);
      }
    }
  }
}
