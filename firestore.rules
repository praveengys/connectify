rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function userExists(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn()
        && userExists(request.auth.uid)
        && getUserData(request.auth.uid).role == 'admin';
    }

    function isGroupMember(groupId) {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/groups/$(groupId))
        && get(/databases/$(database)/documents/groups/$(groupId)).data.members[request.auth.uid] != null;
    }
    
    function isGroupOwner(groupId) {
        return isSignedIn()
         && isGroupMember(groupId)
         && get(/databases/$(database)/documents/groups/$(groupId)).data.members[request.auth.uid] == 'owner';
    }

    function isGroupAdmin(groupId) {
       return isSignedIn()
         && isGroupMember(groupId)
         && (
            get(/databases/$(database)/documents/groups/$(groupId)).data.members[request.auth.uid] == 'admin'
            || isGroupOwner(groupId)
         );
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // Notifications Subcollection
      match /notifications/{notificationId} {
        allow read, update, delete: if isOwner(userId);
        // Notifications must be created by a backend process/cloud function
        allow create: if false;
      }
    }

    // Posts (Global Feed)
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.authorId);
      allow update: if isOwner(resource.data.authorId) || isAdmin();
      allow delete: if isOwner(resource.data.authorId) || isAdmin();

      // Likes Subcollection
      match /likes/{userId} {
        allow read: if isSignedIn();
        allow create, delete: if isOwner(userId);
      }

      // Comments Subcollection
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.authorId);
        allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
      }
    }

    // Forums
    match /forums/{forumId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // Categories
    match /categories/{categoryId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }

    // Threads
    match /threads/{threadId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.authorId);
      allow update: if isOwner(resource.data.authorId) || isAdmin();
      allow delete: if isAdmin();

      // Replies Subcollection
      match /replies/{replyId} {
        allow read: if isSignedIn();
        allow create: if isOwner(request.resource.data.authorId);
        allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
      }
      
      // Chat Messages Subcollection (for live chat in threads)
       match /chatMessages/{messageId} {
         allow read: if isSignedIn();
         allow create: if isOwner(request.resource.data.senderId);
         allow update, delete: if isOwner(resource.data.senderId) || isAdmin();
       }
    }
    
    // Groups
    match /groups/{groupId} {
        allow read: if isGroupMember(groupId) || resource.data.type == 'public';
        allow create: if isOwner(request.resource.data.createdBy);
        allow update: if isGroupAdmin(groupId);
        allow delete: if isGroupOwner(groupId) || isAdmin();

        // Group Messages Subcollection
        match /messages/{messageId} {
            allow read: if isGroupMember(groupId);
            allow create: if isGroupMember(groupId) && isOwner(request.resource.data.senderId);
            allow update, delete: if isOwner(resource.data.senderId) || isGroupAdmin(groupId);
        }

        // Typing Indicators Subcollection
        match /typing/{userId} {
            allow read: if isGroupMember(groupId);
            allow write: if isOwner(userId);
        }
    }
    
    // Demo Bookings
    match /demoBookings/{bookingId} {
      // Only signed-in users can create a booking for themselves.
      allow create: if isSignedIn() && isOwner(request.resource.data.uid);
      
      // Admins can read all bookings, users can read their own.
      allow read: if isAdmin() || (isSignedIn() && isOwner(resource.data.uid));
      
      // Only admins can update (approve/deny) or delete bookings.
      allow update, delete: if isAdmin();
    }
    
    // Demo Slots
    match /demoSlots/{slotId} {
      // Any signed-in user can see available slots.
      allow read: if isSignedIn();
      
      // Only admins can create, update, or delete slots.
      allow write: if isAdmin();
    }
  }
}
