
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function canWrite() {
      return request.auth != null && !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isMuted;
    }

    // Users Collection
    match /users/{userId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();

      // Notifications Subcollection
      match /notifications/{notificationId} {
        allow get, list: if isOwner(userId);
        allow update: if isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);
        // Writes should be handled by server-side logic (Cloud Functions)
        allow create: if isAdmin(); // Or a more specific server-side rule
        allow delete: if false;
      }
    }
    
    // Demo Bookings
    match /demoBookings/{bookingId} {
        allow create: if true;
        allow list: if isAdmin();
        allow get: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.uid);
        allow update, delete: if isAdmin();
    }
    
    // Demo Slots
    match /demoSlots/{slotId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Groups Collection
    match /groups/{groupId} {
      allow get: if true;
      allow list: if true;
      allow create: if canWrite();
      allow update: if canWrite() && (isAdmin() || request.auth.uid == resource.data.createdBy || request.auth.uid in resource.data.members);
      allow delete: if isAdmin() || request.auth.uid == resource.data.createdBy;

      match /messages/{messageId} {
        allow get, list: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow create: if canWrite() && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isAdmin() || request.auth.uid == resource.data.senderId;
      }
      
      match /typing/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Forums, Threads, and Replies
    match /forums/{forumId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /categories/{categoryId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }

    match /threads/{threadId} {
      allow get, list: if true;
      allow create: if canWrite();
      allow update: if isAdmin() || (canWrite() && request.auth.uid == resource.data.authorId);
      allow delete: if isAdmin();

      match /replies/{replyId} {
        allow get, list: if true;
        allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
        allow update: if isAdmin() || (canWrite() && request.auth.uid == resource.data.authorId);
        allow delete: if isAdmin();
      }
       match /chatMessages/{messageId} {
        allow get, list: if true;
        allow create: if canWrite() && request.resource.data.senderId == request.auth.uid;
      }
    }
    
    // Posts, Likes, and Comments
    match /posts/{postId} {
      allow get, list: if true;
      allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
      allow update: if canWrite() && request.auth.uid == resource.data.authorId;
      allow delete: if isAdmin() || request.auth.uid == resource.data.authorId;

      match /likes/{userId} {
        allow read, create, delete: if request.auth.uid == userId;
      }

      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
        allow update: if canWrite() && request.auth.uid == resource.data.authorId;
        allow delete: if isAdmin() || request.auth.uid == resource.data.authorId;
      }
    }
  }
}
