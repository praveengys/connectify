rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ---- Helper Functions ----
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      // Use exists() to prevent errors on non-existent user docs
      return exists(/databases/$(database)/documents/users/$(userId)) ? get(/databases/$(database)/documents/users/$(userId)).data : null;
    }

    function isAdmin() {
      let userData = getUserData(request.auth.uid);
      return signedIn() && userData != null && userData.role == 'admin';
    }
    
    function isModerator() {
      let userData = getUserData(request.auth.uid);
      return signedIn() && userData != null && (userData.role == 'moderator' || userData.role == 'admin');
    }

    // ---- User Profiles ----
    match /users/{userId} {
      allow read: if signedIn() && (isOwner(userId) || getUserData(userId).profileVisibility == 'public');
      allow list: if signedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);

      // Rule to allow users to read their own notifications
      match /notifications/{notificationId} {
        allow read, list: if isOwner(userId);
        allow write: if false; // Can only be written by server-side logic
      }
    }
    
    // ---- Posts (Feed) ----
    match /posts/{postId} {
      allow read: if signedIn();
      
      allow create: if signedIn()
        && request.resource.data.keys().hasAll(['authorId', 'content', 'media', 'visibility', 'status', 'likesCount', 'commentsCount', 'sharesCount', 'repostsCount', 'createdAt', 'updatedAt'])
        && request.resource.data.authorId == request.auth.uid;
      
      allow update: if signedIn() && (resource.data.authorId == request.auth.uid || isAdmin() || isModerator());
      allow delete: if signedIn() && (resource.data.authorId == request.auth.uid || isAdmin());

      match /likes/{userId} {
        allow read: if signedIn();
        allow create, delete: if isOwner(userId);
      }

      match /comments/{commentId} {
        allow read: if signedIn();
        allow create: if signedIn();
      }
    }

    // ---- Groups (Chat) ----
    match /groups/{groupId} {
      allow read: if signedIn() && (resource.data.type == 'public' || request.auth.uid in resource.data.members);
      allow create: if signedIn();
      allow update: if signedIn() && (request.auth.uid in resource.data.memberRoles && resource.data.memberRoles[request.auth.uid] in ['owner', 'admin']);
      
      match /messages/{messageId} {
        allow read, create: if signedIn() && request.auth.uid in resource.data.members;
      }
      
      match /typing/{userId} {
        allow read: if signedIn() && request.auth.uid in resource.data.members;
        allow write: if isOwner(userId);
      }
    }

    // ---- Forums & Discussions ----
    match /forums/{forumId} {
        allow read, list: if signedIn();
        allow create: if isAdmin() || isModerator();
    }

    match /categories/{categoryId} {
        allow read, list: if signedIn();
        allow create: if isAdmin() || isModerator();
    }
    
    match /threads/{threadId} {
      allow read, list: if signedIn();
      allow create: if signedIn();
      allow update, delete: if signedIn() && (isAdmin() || isModerator() || request.auth.uid == resource.data.authorId);

      match /replies/{replyId} {
        allow read, list: if signedIn();
        allow create: if signedIn();
        allow update, delete: if signedIn() && (isAdmin() || isModerator() || request.auth.uid == resource.data.authorId);
      }
    }

    // ---- Demo Booking ----
    match /demoSlots/{slotId} {
        allow read, list: if signedIn();
        allow update: if signedIn(); // For booking transaction
        allow create: if isAdmin();
    }

    match /demoBookings/{bookingId} {
        allow read, list, create: if signedIn();
        allow update: if isAdmin();
    }
  }
}