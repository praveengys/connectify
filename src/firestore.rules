
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------- Helper Functions ---------- */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isModerator() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_moderator/$(request.auth.uid));
    }

    function isModeratorOrAdmin() {
      return isModerator() || isAdmin();
    }
    
    // Rules for user profile documents
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isSignedIn();
      allow read: if resource.data.profileVisibility == 'public' || isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if (isOwner(userId) && request.resource.data.uid == resource.data.uid && request.resource.data.role == resource.data.role && request.resource.data.createdAt == resource.data.createdAt) || isAdmin();
      allow delete: if false;
    }
    
    /* ---------- Forum Rules ---------- */
    match /forums/{forumId} {
      allow get: if (resource.data.status == 'active' && resource.data.visibility == 'public') || isOwner(resource.data.createdBy) || isAdmin();
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid && request.resource.data.status == 'active';
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /threads/{threadId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid && request.resource.data.status == 'published' && request.resource.data.isLocked == false && request.resource.data.isPinned == false;
      allow update: if (isOwner(resource.data.authorId) && !resource.data.isLocked && request.resource.data.diff(resource.data).changedKeys().hasOnly(['title', 'body', 'tags', 'updatedAt'])) || (isModeratorOrAdmin() && request.resource.data.diff(resource.data).changedKeys().hasOnly(['status', 'isPinned', 'isLocked', 'updatedAt', 'moderatorNotes'])) || (isSignedIn() && request.resource.data.diff(resource.data).changedKeys().hasOnly(['replyCount', 'latestReplyAt']));
      allow delete: if false;

      match /replies/{replyId} {
        allow read: if resource.data.status == 'published' || isModeratorOrAdmin() || (isSignedIn() && isOwner(resource.data.authorId));
        
        allow create: if 
          isSignedIn() && 
          request.resource.data.authorId == request.auth.uid && 
          request.resource.data.body is string && 
          request.resource.data.status == 'published' && 
          get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false &&
          (
            (request.resource.data.parentReplyId == null && request.resource.data.depth == 0) ||
            (
              request.resource.data.parentReplyId != null &&
              request.resource.data.depth == 1 &&
              get(/databases/$(database)/documents/threads/$(threadId)/replies/$(request.resource.data.parentReplyId)).data.depth == 0
            )
          );

        allow update: if (isOwner(resource.data.authorId) && request.resource.data.diff(resource.data).changedKeys().hasOnly(['body', 'updatedAt'])) || (isModeratorOrAdmin() && request.resource.data.diff(resource.data).changedKeys().hasOnly(['status', 'moderatorNotes']));
        
        allow delete: if false; // Soft deletes handled by updating status
      }

      // Rules for the real-time chat subcollection
      match /chatMessages/{messageId} {
        allow read: if isSignedIn() && resource.data.status == 'active';
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid && get(/databases/$(database)/documents/threads/$(threadId)).data.isLocked == false;
        allow update, delete: if isOwner(resource.data.senderId) || isModeratorOrAdmin();
      }
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /tags/{tagId} {
      allow read: if true;
      allow write: if isModeratorOrAdmin();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn() && request.resource.data.reporterId == request.auth.uid && request.resource.data.status == 'open';
      allow get, list: if isModeratorOrAdmin();
      allow update: if isModeratorOrAdmin();
      allow delete: if false;
    }
    
     match /moderationQueue/{queueItemId} {
      allow read: if isModeratorOrAdmin();
      allow update: if isModeratorOrAdmin();
      allow create: if false; // created only via backend logic
      allow delete: if false;
    }

    /* ---------- Roles Rules ---------- */
    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }
    
    match /roles_moderator/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
