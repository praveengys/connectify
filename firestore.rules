
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }
    
    function canWrite() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return request.auth != null && !userDoc.isMuted && !userDoc.isBanned;
    }

    // User profiles
    // - Anyone can read public profiles
    // - Users can create their own profile
    // - Users can only update their own profile
    // - Admins can update any profile
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Groups
    // - Any authenticated user can list/read public groups
    // - Any authenticated user can create a group
    // - Group owners and admins can update/delete
    match /groups/{groupId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create: if canWrite();
      allow update, delete: if resource.data.members[request.auth.uid] in ['owner', 'admin'] || isAdmin();

      // Messages
      // - Group members can read/write messages
      match /messages/{messageId} {
        allow get, list: if request.auth.uid in resource.data.members;
        allow create: if canWrite() && request.auth.uid in resource.data.members;
        allow update, delete: if resource.data.senderId == request.auth.uid || isAdmin();
      }
      
      // Typing indicators
      // - Group members can create/update their own typing status
      match /typing/{userId} {
        allow write: if isOwner(userId) && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow read: if request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
    }
    
    // Forums
    // - Authenticated users can read/list forums
    // - Admins can create/update/delete
    match /forums/{forumId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    // Threads
    // - Authenticated users can read/list threads
    // - Authenticated (and not muted) users can create threads
    // - Thread authors and admins can update
    match /threads/{threadId} {
      allow get, list: if request.auth != null;
      allow create: if canWrite();
      allow update: if resource.data.authorId == request.auth.uid || isAdmin();
      allow delete: if isAdmin();
      
      // Replies
      // - Authenticated users can read/list replies
      // - Authenticated (and not muted) users can create replies
      match /replies/{replyId} {
        allow get, list: if request.auth != null;
        allow create: if canWrite();
        allow update, delete: if resource.data.authorId == request.auth.uid || isAdmin();
      }
      
      // Chat Messages (for live chat in threads)
      match /chatMessages/{messageId} {
        allow get, list: if request.auth != null;
        allow create: if canWrite();
      }
    }
    
    // Posts (Social Feed)
    // - Authenticated users can read public posts
    // - Authenticated users can create posts
    // - Authors and admins can update/delete
    match /posts/{postId} {
        allow get, list: if request.auth != null;
        allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
        allow update: if resource.data.authorId == request.auth.uid || isAdmin();
        allow delete: if resource.data.authorId == request.auth.uid || isAdmin();

        // Likes
        match /likes/{userId} {
            allow read, write: if isOwner(userId);
        }

        // Comments
        match /comments/{commentId} {
            allow read, list: if request.auth != null;
            allow create: if canWrite();
            allow update, delete: if resource.data.authorId == request.auth.uid || isAdmin();
        }
    }

    // Categories and Tags are admin-managed for now
    match /categories/{categoryId} {
        allow get, list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }
    
    // Demo Bookings
    // - Anyone can create a booking request.
    // - Admins can read all bookings to manage them.
    match /demoBookings/{bookingId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }
  }
}
