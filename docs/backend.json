
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique ID of the user, matching the Firebase Auth UID."
        },
        "username": {
          "type": "string",
          "description": "The user's unique, URL-friendly username."
        },
        "displayName": {
          "type": "string",
          "description": "The user's public display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's primary email address."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to the user's profile picture."
        },
        "bio": {
          "type": "string",
          "description": "A short biography or summary about the user."
        },
        "interests": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of the user's interests or hobbies."
        },
        "skills": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "languages": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "location": {
            "type": "string"
        },
        "currentlyExploring": {
            "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "member",
            "admin"
          ],
          "description": "The user's role within the application."
        },
        "profileVisibility": {
          "type": "string",
          "enum": [
            "public",
            "private"
          ],
          "description": "Controls who can see the user's full profile."
        },
        "emailVerified": {
          "type": "boolean",
          "description": "Flag indicating if the user's email has been verified."
        },
        "profileScore": {
            "type": "number"
        },
        "postCount": {
            "type": "number"
        },
        "commentCount": {
            "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was last updated."
        },
        "lastActiveAt": {
            "type": "string",
            "format": "date-time"
        },
        "isMuted": {
            "type": "boolean"
        },
        "isBanned": {
            "type": "boolean"
        }
      },
      "required": [
        "uid",
        "username",
        "displayName",
        "email",
        "role",
        "profileVisibility",
        "createdAt"
      ]
    },
    "Post": {
      "title": "Post",
      "description": "A post in the community feed.",
      "type": "object",
      "properties": {
        "authorId": {
          "type": "string",
          "description": "The UID of the user who created the post."
        },
        "content": {
          "type": "string",
          "description": "The text content of the post."
        },
        "media": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "An array of URLs for images or videos."
        },
        "visibility": {
          "type": "string",
          "enum": ["public", "group-only"]
        },
        "status": {
          "type": "string",
          "enum": ["active", "draft", "deleted", "reported"]
        },
        "likesCount": {
          "type": "number"
        },
        "commentsCount": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["authorId", "content", "visibility", "status", "createdAt"]
    },
    "PostComment": {
        "title": "Post Comment",
        "description": "A comment on a feed post.",
        "type": "object",
        "properties": {
            "postId": { "type": "string" },
            "authorId": { "type": "string" },
            "content": { "type": "string" },
            "parentCommentId": { "type": ["string", "null"] },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["postId", "authorId", "content", "createdAt"]
    },
     "PostLike": {
        "title": "Post Like",
        "description": "Represents a user's like on a post.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public and private information for each user."
    },
    "/posts/{postId}": {
      "schema": {
        "$ref": "#/entities/Post"
      },
      "description": "The main collection for all community feed posts."
    },
    "/posts/{postId}/comments/{commentId}": {
        "schema": { "$ref": "#/entities/PostComment" },
        "description": "Subcollection for comments on a specific post."
    },
    "/posts/{postId}/likes/{userId}": {
        "schema": { "$ref": "#/entities/PostLike" },
        "description": "Subcollection to track likes. Document ID is the UID of the user who liked it."
    }
  }
}
