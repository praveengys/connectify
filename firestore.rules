
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function canWrite() {
        return request.auth != null && !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isMuted;
    }

    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    // Forums
    match /forums/{forumId} {
      allow read: if request.auth != null;
      allow create: if canWrite() && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Categories
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow create: if canWrite() || isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // Threads and subcollections
    match /threads/{threadId} {
      allow read: if request.auth != null;
      allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
      allow update: if (canWrite() && isOwner(resource.data.authorId)) || isAdmin();
      allow delete: if isAdmin();
      
      // Replies
      match /replies/{replyId} {
        allow read: if request.auth != null;
        allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
        allow update: if (canWrite() && isOwner(resource.data.authorId)) || isAdmin();
        allow delete: if isAdmin();
      }

      // Real-time chat messages within a thread
      match /chatMessages/{messageId} {
        allow read: if request.auth != null;
        allow create: if canWrite() && request.resource.data.senderId == request.auth.uid;
      }
    }
    
    // Group Chats and subcollections
    match /groups/{groupId} {
        allow read: if request.auth != null;
        allow create: if canWrite() && request.resource.data.createdBy == request.auth.uid;
        allow update: if (canWrite() && request.auth.uid in resource.data.members && (resource.data.members[request.auth.uid] == 'owner' || resource.data.members[request.auth.uid] == 'admin')) || isAdmin();
        allow delete: if isAdmin();

        match /messages/{messageId} {
            allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
            allow create: if canWrite() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }

        match /typing/{userId} {
            allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
            allow write: if isOwner(userId);
        }
    }
    
    // Social Feed Posts and subcollections
    match /posts/{postId} {
        allow read: if request.auth != null;
        allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
        allow update: if (canWrite() && isOwner(resource.data.authorId)) || isAdmin();
        allow delete: if isOwner(resource.data.authorId) || isAdmin();

        match /likes/{userId} {
            allow read: if request.auth != null;
            allow write: if isOwner(userId);
        }

        match /comments/{commentId} {
            allow read: if request.auth != null;
            allow create: if canWrite() && request.resource.data.authorId == request.auth.uid;
            allow update: if (canWrite() && isOwner(resource.data.authorId)) || isAdmin();
            allow delete: if isOwner(resource.data.authorId) || isAdmin();
        }
    }

    // Demo Booking Slots
    match /demoSlots/{slotId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Demo Booking Requests
    match /demoBookings/{bookingId} {
      allow list: if isAdmin();
      allow get: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.uid);
      allow create: if true; // Anyone can create a booking request
      allow update, delete: if isAdmin();
    }

    // Notifications
    match /notifications/{notificationId} {
      // Only the recipient can read their notifications
      allow get, list: if isOwner(resource.data.recipientId);
      // Only the recipient can mark their own notification as read
      allow update: if isOwner(resource.data.recipientId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);
      // Notifications should only be created by the backend (Cloud Functions)
      allow create: if false; 
      allow delete: if false;
    }
  }
}
