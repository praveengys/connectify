rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserProfileOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isMemberOfGroup(groupId) {
      return get(/databases/$(database)/documents/groups/$(groupId)).data.members[request.auth.uid] != null;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isUserAuthenticated();
      allow write: if isUserProfileOwner(userId) || isAdmin();
    }
    
    // Categories for the forum
    match /categories/{categoryId} {
      allow read: if isUserAuthenticated();
      allow create: if isUserAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Forums
    match /forums/{forumId} {
        allow read: if isUserAuthenticated();
        allow create: if isUserAuthenticated();
        allow update, delete: if isAdmin();
    }
    
    // Threads and their subcollections
    match /threads/{threadId} {
      allow read: if isUserAuthenticated();
      allow create: if isUserAuthenticated();
      allow update: if isUserProfileOwner(resource.data.authorId) || isAdmin();
      allow delete: if isAdmin();
      
      // Replies within a thread
      match /replies/{replyId} {
        allow read: if isUserAuthenticated();
        allow create: if isUserAuthenticated();
        allow update: if isUserProfileOwner(resource.data.authorId) || isAdmin();
        allow delete: if isAdmin();
      }
      
      // Live chat messages within a thread
      match /chatMessages/{messageId} {
        allow read: if isUserAuthenticated();
        allow create: if isUserAuthenticated();
        allow update, delete: if isUserProfileOwner(resource.data.senderId) || isAdmin();
      }
    }
    
    // Groups and their subcollections
    match /groups/{groupId} {
        allow read: if resource.data.type == 'public' || isMemberOfGroup(groupId);
        allow create: if isUserAuthenticated();
        allow update: if isMemberOfGroup(groupId) || isAdmin(); // More granular control might be needed for role changes
        allow delete: if isAdmin();
        
        match /messages/{messageId} {
            allow read: if isMemberOfGroup(groupId);
            allow create: if isMemberOfGroup(groupId);
            allow update, delete: if isUserProfileOwner(resource.data.senderId) || isAdmin();
        }
        
        match /typing/{userId} {
            allow read, write: if isUserAuthenticated();
        }
    }
    
    // Activity Feed Posts
    match /posts/{postId} {
        allow read: if isUserAuthenticated();
        allow create: if isUserAuthenticated();
        allow update: if isUserProfileOwner(resource.data.authorId) || isAdmin();
        allow delete: if isUserProfileOwner(resource.data.authorId) || isAdmin();

        match /comments/{commentId} {
            allow read: if isUserAuthenticated();
            allow create: if isUserAuthenticated();
            allow update, delete: if isUserProfileOwner(resource.data.authorId) || isAdmin();
        }
        
        match /likes/{userId} {
            allow read: if isUserAuthenticated();
            allow write: if isUserProfileOwner(userId);
        }
    }

    // Demo Bookings
    match /demoBookings/{bookingId} {
      // Allow anyone to read bookings to check for available slots
      allow read: if true;
      // Only authenticated users can create a booking
      allow create: if isUserAuthenticated();
      // Only admins can modify or delete bookings
      allow update, delete: if isAdmin();
    }
  }
}
