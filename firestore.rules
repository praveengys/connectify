rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function uid() {
      return request.auth.uid;
    }

    function isSelf(id) {
      return signedIn() && uid() == id;
    }

    function isAdmin() {
      return signedIn()
        && exists(/databases/$(database)/documents/users/$(uid()))
        && get(/databases/$(database)/documents/users/$(uid())).data.role == 'admin';
    }

    function isModerator() {
      return signedIn()
        && exists(/databases/$(database)/documents/users/$(uid()))
        && get(/databases/$(database)/documents/users/$(uid())).data.role in ['admin', 'moderator'];
    }

    // Users
    match /users/{userId} {
      allow read: if signedIn();
      allow create: if isSelf(userId);
      allow update: if isSelf(userId) || isAdmin();
      allow delete: if isAdmin();

      match /notifications/{id} {
        allow read, update, delete: if isSelf(userId);
        allow create: if false; // backend only
      }
    }

    // Posts, Likes, Comments
    match /posts/{postId} {
      allow read: if signedIn();
      allow create: if signedIn()
        && request.resource.data.authorId == uid()
        && exists(/databases/$(database)/documents/users/$(uid()));
      allow update: if isAdmin() || uid() == resource.data.authorId;
      allow delete: if isAdmin() || uid() == resource.data.authorId;

      match /likes/{likeId} {
        allow read: if signedIn();
        allow create: if signedIn()
          && likeId == uid()
          && request.resource.data.userId == uid();
        allow delete: if signedIn() && likeId == uid();
      }

      match /comments/{commentId} {
        allow read: if signedIn();
        allow create: if signedIn() && request.resource.data.authorId == uid();
        allow update, delete: if isAdmin() || uid() == resource.data.authorId;
      }
    }

    // Groups & Group Chat
    match /groups/{groupId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.createdBy == uid();
      
      allow update: if isAdmin()
        || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage', 'memberCount', 'members', 'memberRoles']));
        
      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read: if signedIn()
          && get(/databases/$(database)/documents/groups/$(groupId))
               .data.members[uid()] == true;

        allow create: if signedIn()
          && request.resource.data.senderId == uid()
          && get(/databases/$(database)/documents/groups/$(groupId))
               .data.members[uid()] == true;

        allow update, delete: if isAdmin() || uid() == resource.data.senderId;
      }
       match /typing/{typingId} {
          allow read, write: if signedIn() && get(/databases/$(database)/documents/groups/$(groupId)).data.members[uid()] == true;
      }
    }

    // Threads, Replies, and Thread Chat
    match /threads/{threadId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.authorId == uid();
      allow update, delete: if isAdmin() || uid() == resource.data.authorId;

      match /replies/{replyId} {
        allow read: if signedIn();
        allow create: if signedIn() && request.resource.data.authorId == uid();
        allow update, delete: if isAdmin() || uid() == resource.data.authorId;
      }

      match /chatMessages/{id} {
        allow read, create: if signedIn();
        allow update, delete: if isAdmin() || uid() == resource.data.senderId;
      }
    }

    // Demo Booking
    match /demoSlots/{id} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /demoBookings/{id} {
      allow create: if signedIn() && request.resource.data.uid == uid();
      allow read: if isAdmin() || uid() == resource.data.uid;
      allow update, delete: if isAdmin();
    }
    
    // Moderation & Forums
    match /forums/{id} {
      allow read: if signedIn();
      allow write: if isModerator();
    }

    match /categories/{id} {
      allow read: if signedIn();
      allow write: if isModerator();
    }

    match /moderationLogs/{id} {
      allow read, write: if isModerator();
    }
  }
}